#!/bin/sh
rm -rf temp
mkdir temp
cd temp
git clone git@mactv:repos/free42.git
for i in `cat ../macports/remove`
do
    rm -rf free42/$i
done
( cd ../macports/replace ; tar cf - . ) | ( cd free42 ; tar xf - )
rm -rf free42/.git
mkdir -p ../../packages
PKGNAME=free42-macports-`cat ../../VERSION`
mv free42 $PKGNAME
tar cvfz ../../packages/$PKGNAME.tgz $PKGNAME
cd ..
rm -rf temp
